# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# GEMINI API (REQUIRED)
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
# For load balancing, provide 2 keys (comma-separated) to avoid rate limits
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY_2=your_gemini_api_key_here_2

# ============================================================================
# GOOGLE PROGRAMMABLE SEARCH ENGINE (REQUIRED)
# ============================================================================
# Setup: https://developers.google.com/custom-search/v1/overview
# 1. Create a Programmable Search Engine: https://programmablesearchengine.google.com/
# 2. Get your Search Engine ID (cx parameter)
# 3. Enable Custom Search API and get API key from Google Cloud Console
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# ============================================================================
# FIREBASE (REQUIRED)
# ============================================================================
# Option 1: Path to service account JSON file
FIREBASE_CONFIG_PATH=./firebase-credentials.json

# Option 2: JSON string (for deployment)
# FIREBASE_CONFIG_JSON='{"type":"service_account","project_id":"...","private_key":"..."}'

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
FLASK_ENV=development
PORT=5000

# ============================================================================
# OPTIONAL CONFIGURATIONS
# ============================================================================
# Log level
LOG_LEVEL=INFO

# Cache duration (hours)
CACHE_DURATION=24
